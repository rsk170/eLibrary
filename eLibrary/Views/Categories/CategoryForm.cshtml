@model eLibrary.ViewModels.CategoryFormViewModel

@{
	ViewBag.Title = "CategoryForm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Categories"))
{
	@Html.ValidationSummary(true, "Please fix all errors on this page.")
	<div class="form-group">
		@Html.LabelFor(c => c.Name, new { @class = "control-label" })
		@Html.TextBoxFor(c => c.Name, new { @class = "form-control" })
		@Html.ValidationMessageFor(c => c.Name)
	</div>
	@Html.HiddenFor(b => b.Id)
	@Html.AntiForgeryToken()
	<button type="submit" class="btn btn-primary"> Save </button>
}
