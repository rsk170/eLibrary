@model eLibrary.ViewModels.CategoryFormViewModel

@{
	ViewBag.Title = "CategoryForm";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Id == 0)
{
	<h2 class="col-md-10"> New Category</h2>
}
else
{
	<h2 class="col-md-10"> Edit Category </h2>
}

<form asp-controller="Categories" asp-action="Save">
	<div asp-validation-summary="ModelOnly">
		<span> Please fix all errors on this page. </span>
	</div>
	<div class="form-group">
		<label asp-for="Name" class="col-md-2 control-label"></label>
		<div class="col-md-10">
			<input asp-for="Name" class="form-control" />
		</div>
		<span asp-validation-for="Name"></span>
	</div>
	<input asp-for="Id" type="hidden" />
	<div class="col-md-10">
		<button type="submit" class="btn btn-primary"> Save </button>
	</div>
</form>
